@page "/OneChange"

<PageTitle Title="ONE CHANGE" Position="5" />

<p>What is the one thing you'd change about your custom Software Development?  (Optional)</p>

<EditForm Model="@Model">
    <DataAnnotationsValidator />

    <div class="form-group">
        <InputTextArea id="text" @bind-Value="@Model.Text" class="form-control" rows="5" />
    </div>

    <SetInputFocus ById="text" />

    <NavigationButtons PreviousUrl="/Experiences" NextUrl="/Contact" />
</EditForm>

@code
{
    [Inject]
    private Models.OneChange Model { get; set; }

    [Inject]
    private Services.IEventLoggingService EventLoggingService { get; set; }

    protected override void OnInitialized()
    {
        EventLoggingService.TrackEvent("Loaded one change page");
    }
}